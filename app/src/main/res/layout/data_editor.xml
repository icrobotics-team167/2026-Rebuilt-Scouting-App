<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum = "10"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.9"
            android:weightSum="16"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/matchNumberHeader"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.8"
                android:textSize="30dp"
                android:textColor="@color/black"
                android:text="Match Number:" />

            <EditText
                android:id="@+id/matchNumber"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="text"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:text="#" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.2" />

            <TextView
                android:id="@+id/teamNumberHeader"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.5"
                android:textSize="30dp"
                android:textColor="@color/black"
                android:text="Team Number:" />

            <EditText
                android:id="@+id/teamNumber"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.3"
                android:ems="10"
                android:inputType="text"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:text="#" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.2" />

            <TextView
                android:id="@+id/scouterHeader"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.1"
                android:textSize="30dp"
                android:textColor="@color/black"
                android:text="Name:" />

            <EditText
                android:id="@+id/scouter"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.7"
                android:ems="10"
                android:inputType="text"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:text="#" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.2" />

            <TextView
                android:id="@+id/scoutingAssignmentHeader"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.1"
                android:textSize="30dp"
                android:textColor="@color/black"
                android:text="Assignment:" />

            <EditText
                android:id="@+id/scoutingAssignment"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.9"
                android:ems="10"
                android:inputType="text"
                android:textSize="30sp"
                android:text="#" />

        </LinearLayout>

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="0.1"
            android:background="?android:attr/listDivider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="3"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/autoCyclesHeader"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:text="Auto Cycles:" />

            <TextView
                android:id="@+id/activeCyclesHeader"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:text="Active Cycles:" />

            <TextView
                android:id="@+id/inactiveCyclesHeader"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:text="Inactive Cycles:" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.9"
            android:weightSum="3"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/autoCycles"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:ems="10"
                android:inputType="text"
                android:text="#" />

            <EditText
                android:id="@+id/activeCycles"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:ems="10"
                android:inputType="text"
                android:text="#" />

            <EditText
                android:id="@+id/inactiveCycles"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:ems="10"
                android:inputType="text"
                android:text="#" />

        </LinearLayout>

        <View
            android:id="@+id/divider6"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:background="?android:attr/listDivider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:id="@+id/autoNeutralZoneHeader"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Auto Neutral Zone:"
                android:textColor="@color/black"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/activePlayedDefenseHeader"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Active Played Defense:"
                android:textColor="@color/black"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/inactivePlayedDefenseHeader"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Inactive Played Defense:"
                android:textColor="@color/black"
                android:textSize="25dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.9"
            android:orientation="horizontal"
            android:weightSum="3">

            <EditText
                android:id="@+id/autoNeutralZone"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="text"
                android:text="#"
                android:textColor="@color/black"
                android:textSize="25dp" />

            <EditText
                android:id="@+id/activePlayedDefense"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="text"
                android:text="#"
                android:textColor="@color/black"
                android:textSize="25dp" />

            <EditText
                android:id="@+id/inactivePlayedDefense"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="text"
                android:text="#"
                android:textColor="@color/black"
                android:textSize="25dp" />

        </LinearLayout>

        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:background="?android:attr/listDivider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="4"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/endTransitionHeader"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:text="End of Transition Score:" />

            <TextView
                android:id="@+id/endShift1Header"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:text="End of Shift 1 Score:" />

            <TextView
                android:id="@+id/endShift2Header"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:text="End of Shift 2 Score:" />

            <TextView
                android:id="@+id/endShift3Header"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:text="End of Shift 3 Score:" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.9"
            android:weightSum="4"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/endTransition"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:ems="10"
                android:inputType="text"
                android:text="#" />

            <EditText
                android:id="@+id/endShift1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:ems="10"
                android:inputType="text"
                android:text="#" />

            <EditText
                android:id="@+id/endShift2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:ems="10"
                android:inputType="text"
                android:text="#" />

            <EditText
                android:id="@+id/endShift3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:ems="10"
                android:inputType="text"
                android:text="#" />
        </LinearLayout>

        <View
            android:id="@+id/divider5"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:background="?android:attr/listDivider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="3"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/towerPositionHeader"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:text="Tower Position"/>

            <TextView
                android:id="@+id/passedFuelHeader"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:text="Passed Fuel:" />

            <TextView
                android:id="@+id/driverRatingHeader"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:text="Driver Rating:" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.9"
            android:weightSum="3"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/towerPosition"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:ems="10"
                android:inputType="text"
                android:text="#" />

            <EditText
                android:id="@+id/passedFuel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:ems="10"
                android:inputType="text"
                android:text="#" />

            <EditText
                android:id="@+id/driverRating"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:ems="10"
                android:inputType="text"
                android:text="#" />
        </LinearLayout>

        <View
            android:id="@+id/divider3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:background="?android:attr/listDivider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/commentsHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:text="Notes:" />

            <EditText
                android:id="@+id/comments"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:ems="10"
                android:inputType="text"
                android:text="#" />

            <Button
                android:id="@+id/saveExitButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:textSize="25dp"
                android:backgroundTint="@color/saveButton"
                android:text="Save and Exit" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>