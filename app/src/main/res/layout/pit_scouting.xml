<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="64"
        android:background="@color/background"
        android:orientation="horizontal">

        <View
            android:id="@+id/divider31"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?android:attr/listDivider" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="62"
            android:orientation="vertical"
            android:weightSum="68">

            <View
                android:id="@+id/divider33"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="?android:attr/listDivider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="6"
                android:orientation="horizontal"
                android:weightSum="12">

                <TextView
                    android:id="@+id/teamNumberHeader"
                    style="@style/AutoResize25"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:paddingStart="10dp"
                    android:text="Team Number:" />

                <EditText
                    android:id="@+id/teamNumber"
                    style="@style/AutoResize25"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="text"
                    android:hint="#" />

                <TextView
                    android:id="@+id/scouterHeader"
                    style="@style/AutoResize25"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingStart="10dp"
                    android:gravity="center_vertical"
                    android:text="Name:" />

                <EditText
                    android:id="@+id/scouter"
                    style="@style/AutoResize20"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:ems="10"
                    android:inputType="text"
                    android:hint="Your name"
                    android:text="" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.9" />

                <Button
                    android:id="@+id/editButton"
                    style="@style/AutoResize20"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/secondaryForeground"
                    android:textColor="@color/black"
                    android:text="Edit Old Data" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2" />

                <Button
                    android:id="@+id/exportButton"
                    style="@style/AutoResize20"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/secondaryForeground"
                    android:textColor="@color/black"
                    android:text="Export" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2" />

                <Button
                    android:id="@+id/exportButton2"
                    style="@style/AutoResize20"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1.5"
                    android:backgroundTint="@color/red"
                    android:text="Delete Data"
                    android:textColor="@color/black" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2" />

            </LinearLayout>

            <View
                android:id="@+id/divider25"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="?android:attr/listDivider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="6"
                android:orientation="horizontal"
                android:weightSum="48">

                <TextView
                    android:id="@+id/hopperDimensionsHeader"
                    style="@style/AutoResize25"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="11"
                    android:gravity="center|start"
                    android:paddingStart="10dp"
                    android:text="Dimensions of Hopper:" />

                <EditText
                    android:id="@+id/hopperDimensions"
                    style="@style/AutoResize20"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="8.3"
                    android:ems="10"
                    android:paddingTop="10dp"
                    android:inputType="text"
                    android:hint="h x l x w"
                    android:text=""/>

                <Spinner
                    android:id="@+id/hopperUnitSpinner"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5" />

                <View
                    android:id="@+id/divider43"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.4"
                    android:background="?android:attr/listDivider" />

                <TextView
                    android:id="@+id/framePerimeterDimensions"
                    style="@style/AutoResize25"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="10"
                    android:gravity="center|start"
                    android:paddingStart="10dp"
                    android:text="Frame Perimeter:" />

                <EditText
                    android:id="@+id/hopperDimensions2"
                    style="@style/AutoResize20"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="8.3"
                    android:ems="10"
                    android:hint="h x l x w"
                    android:inputType="text"
                    android:paddingTop="10dp"
                    android:text="" />

                <Spinner
                    android:id="@+id/frameUnitSpinner"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5" />
            </LinearLayout>

            <View
                android:id="@+id/divider26"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="?android:attr/listDivider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:orientation="horizontal"
                android:weightSum="12">

                <TextView
                    android:id="@+id/hopperTypeHeader"
                    style="@style/AutoResize25"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:paddingStart="10dp"
                    android:text="Kind of Hopper:" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:orientation="horizontal"
                android:paddingStart="10dp"
                android:weightSum="12">

                <CheckBox
                    android:id="@+id/openHopper"
                    style="@style/AutoResize20"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:text="Open" />

                <CheckBox
                    android:id="@+id/extendableHopper"
                    style="@style/AutoResize20"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:text="Extendable" />

                <CheckBox
                    android:id="@+id/closedHopper"
                    style="@style/AutoResize20"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:text="Closed" />

            </LinearLayout>

            <View
                android:id="@+id/divider27"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="?android:attr/listDivider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="6"
                android:orientation="horizontal"
                android:weightSum="24">

                <TextView
                    android:id="@+id/turretHeader"
                    style="@style/AutoResize25"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center|start"
                    android:layout_weight="2.1"
                    android:paddingStart="10dp"
                    android:text="Shooter:" />

                <CheckBox
                    android:id="@+id/tiltTurret"
                    style="@style/AutoResize20"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:text="Tilt" />

                <CheckBox
                    android:id="@+id/turnTurret"
                    style="@style/AutoResize20"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:text="Turn" />

                <TextView
                    android:id="@+id/numberOfShootersHeader"
                    style="@style/AutoResize20"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:gravity="center"
                    android:text="Number of Shooters:" />

                <EditText
                    android:id="@+id/numberOfShooters"
                    style="@style/AutoResize20"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:gravity="center"
                    android:inputType="text"
                    android:hint="#"
                    android:text="" />
            </LinearLayout>

            <View
                android:id="@+id/divider28"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="?android:attr/listDivider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="6"
                android:orientation="horizontal"
                android:weightSum="24">

                <TextView
                    android:id="@+id/intakeHeader"
                    style="@style/AutoResize25"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center|start"
                    android:paddingStart="10dp"
                    android:text="Intake:" />

                <CheckBox
                    android:id="@+id/humanIntake"
                    style="@style/AutoResize20"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:text="Human" />

                <CheckBox
                    android:id="@+id/throughBumperIntake"
                    style="@style/AutoResize20"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:text="Through Bumper" />

                <CheckBox
                    android:id="@+id/overBumperIntake"
                    style="@style/AutoResize20"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:text="Over Bumper" />

                <TextView
                    android:id="@+id/textView4"
                    style="@style/AutoResize20"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:text="Intake Width:" />

                <EditText
                    android:id="@+id/editTextText5"
                    style="@style/AutoResize20"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:ems="10"
                    android:inputType="text"
                    android:hint="h x l x w"
                    android:text="" />
                <Spinner
                    android:id="@+id/intakeUnitSpinner"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5" />
            </LinearLayout>

            <View
                android:id="@+id/divider29"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="?android:attr/listDivider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/crossLineHeader"
                    style="@style/AutoResize25"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingStart="10dp"
                    android:text="Method for Crossing Hub Line:" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="6"
                android:orientation="horizontal"
                android:paddingStart="10dp"
                android:weightSum="12">

                <CheckBox
                    android:id="@+id/bump"
                    style="@style/AutoResize20"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:text="Bump" />

                <CheckBox
                    android:id="@+id/trench"
                    style="@style/AutoResize20"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:text="Trench" />

            </LinearLayout>

            <View
                android:id="@+id/divider30"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="?android:attr/listDivider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/cornOnCobHeader"
                    style="@style/AutoResize25"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingStart="10dp"
                    android:text="What Do You Like On Your Corn?" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="5"
                android:layout_height="0dp"
                android:weightSum="6"
                android:paddingStart="10dp"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/yesCornOnCob"
                    style="@style/AutoResize20"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Salt" />

                <CheckBox
                    android:id="@+id/definitelyCornOnCob"
                    style="@style/AutoResize20"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Pepper" />

                <CheckBox
                    android:id="@+id/absolutelyCornOnCob"
                    style="@style/AutoResize20"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Butter" />

                <CheckBox
                    android:id="@+id/checkBox6"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:text="" />

                <EditText
                    android:id="@+id/editTextText"
                    style="@style/AutoResize20"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:ems="10"
                    android:paddingTop="5dp"
                    android:inputType="text"
                    android:hint="Other" />
            </LinearLayout>

            <View
                android:id="@+id/divider35"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="?android:attr/listDivider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="7"
                android:weightSum="12"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/commentsHeader"
                    style="@style/AutoResize30"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="2"
                    android:text="Notes:" />

                <EditText
                    android:id="@+id/comments"
                    style="@style/AutoResize25"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:ems="10"
                    android:inputType="text"
                    android:hint="Notes go here..." />

                <Button
                    android:id="@+id/saveExitButton"
                    style="@style/AutoResize20"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:backgroundTint="@color/primaryForeground"
                    android:textColor="@color/white"
                    android:text="Save and Exit" />
            </LinearLayout>

            <View
                android:id="@+id/divider34"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="?android:attr/listDivider" />

        </LinearLayout>

        <View
            android:id="@+id/divider32"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?android:attr/listDivider" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>